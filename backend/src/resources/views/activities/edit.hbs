<h2>Edit Activity</h2>

<form class='mt-4' method='POST' action='/activities/{{activity._id}}?_method=PUT'>
  <div class='row mt-3'>
    <input type='text' class='form-control' placeholder='Title' value='{{activity.title}}' id='title' name='title' />
  </div>
  <div class='row mt-3'>
    <input type='text' class='form-control' placeholder='Locate' value='{{activity.locate}}' id='locate' name='locate' />
  </div>
  <div class='row mt-3'>
    <input type='text' class='form-control' placeholder='Time Active' value='{{activity.timeActive}}' id='timeActive' name='timeActive' />
  </div>
  <div class='row mt-3'>
    <input type='text' class='form-control' placeholder='Time Start' value='{{activity.timeStart}}' id='timeStart' name='timeStart' />
  </div>
  <div class='row mt-3'>
    <input type='number' class='form-control' placeholder='Amount' value='{{activity.amount}}' id='amount' name='amount' />
  </div>
  <div class='row mt-3'>
    <input type='number' class='form-control' placeholder='Max' value='{{activity.max}}' id='max' name='max' />
  </div>

  <button type='submit' class='btn btn-primary mt-2'>Save</button>
</form>